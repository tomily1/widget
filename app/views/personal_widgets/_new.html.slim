#create-widget-modal.modal.fade.modal-auth aria-hidden="true" role="dialog" tabindex="-1" 
  .modal-dialog
    .modal-content
      .modal-header
        h3 Create a Widget
        button.close aria-hidden="true" data-dismiss="modal" type="button"  Ã—
      .modal-body
        = form_tag(personal_widgets_path, :method => 'post', :class => 'form', :id => 'create-widget') do
          .form-group
            = text_field_tag(:name, '', :placeholder => "Name", :class => 'form-control', :required => true)
          .form-group
            = text_area_tag(:description, '', :placeholder => "Description", :class => 'form-control', :required => true)
          .form-group
            = select_tag(:kind, options_for_select(@kind, @kind.first), :class => 'form-control', :required => true)
          .form-group
            = submit_tag('Create Widget', class: 'btn widget-red-button')